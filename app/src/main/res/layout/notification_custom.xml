<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_margin="3dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_noti"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_foreground" />

    <TextView
        android:id="@+id/tv_noti"
        android:layout_width="120dp"
        android:layout_height="15sp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/img_noti"
        android:text="Âm thanh giấc ngủ"
        android:textColor="#3725F7"
        android:textStyle="normal|italic" />

    <TextView
        android:id="@+id/tv_settime"
        android:layout_width="100dp"
        android:layout_height="15sp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/tv_noti"
        android:text="Timer not set"
        android:textColor="#16151F"
        android:textStyle="normal|italic"

        />

    <TextView
        android:id="@+id/tv_state"
        android:layout_width="100dp"
        android:layout_height="20sp"
        android:layout_below="@+id/img_noti"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="Sleep Sounds"
        android:textColor="#16151F"
        android:textStyle="normal|italic" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="20sp"
        android:layout_below="@+id/tv_state"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:text="Playing"
        android:textColor="#16151F"
        android:textStyle="normal|italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_toRightOf="@+id/tv_settime"
        android:orientation="horizontal"
        android:weightSum="5">

        <Button
            android:id="@+id/btn_play"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="7dp"
            android:layout_weight="1"

            android:background="@drawable/ic_launcher_foreground" />

        <Button
            android:id="@+id/btn_stop"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="7dp"
            android:layout_weight="1"
            android:background="@drawable/ic_launcher_background" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:src="@drawable/ic_notification_large_colored"

            />


    </LinearLayout>

</RelativeLayout>